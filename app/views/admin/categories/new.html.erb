<!-- app/views/admin/categories/new.html.erb -->
<h1>New Category</h1>

<%= form_for [:admin, @category] do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="actions">
    <%= f.submit "Create Category" %>
  </div>
<% end %>

<%= link_to "Back to Categories", admin_categories_path %>
